<div class="flex-container">
  <h1>Browser History Simulator</h1>
    
  <!-- Textbox form to enter a URL -->
  <%= form_with(model: UrlHistory.new, url: url_histories_path, method: :post) do |form| %>
    <%= form.text_field :url, placeholder: 'Enter a URL', required: true %>
    <%= form.submit 'Go' %>
  <% end %>

  <!-- Navigation buttons -->
  <div class="flex-div">
    <div class="flex-back">
      <%if @disable_back_button %>
        <%= link_to(
          'Back ',
          'javascript:void(0);',
          class: 'btn btn-primary disabled' )
        %>
      <% else %>
        <%= link_to(
          'Back ',
          url_histories_path(back: true, current_url: @current_url.id),
          class: 'btn btn-primary' )
        %>
      <% end %>
    </div>

    <div class="flex-next">
      <%if @disable_next_button %>
        <%= link_to 'Next', 'javascript:void(0);', class: 'btn btn-primary disabled' %>
      <% else %>
        <%= link_to 'Next', url_histories_path(next: true, current_url: @current_url.id), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <!-- Report email button -->
  <%= link_to 'Email Me The Report', email_report_url_histories_path, id: 'btn-report-email' %>

  <h2>Current URL:</h2>
  <p><%= @current_url.url if @current_url %></p>

  <h2>Entered URLs:</h2>
  <ul>
    <% @url_histories.each do |url_history| %>
      <li><%= url_history.url %></li>
    <% end %>
  </ul>
</div>

